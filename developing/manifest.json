{
  "manifest_version": 3,
  "name": "Shorts Remover",
  "version": "0.1.0",
  "description": "This extension will help you remove YouTube Shorts from Subscriptions feed",
  "icons": {
    "64": "icons/icon_64.png"
  },
  "action": {
    "default_title": "Shorts Remover",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting", "activeTab"
  ],
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "js": ["background.js"]
  }]
}