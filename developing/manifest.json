{
  "manifest_version": 3,
  "name": "Shorts Remover",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "64": "icons/icon_64.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Shorts Remover",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}